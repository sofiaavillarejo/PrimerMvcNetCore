@*
	COMENTARIOS EN RAZOR
*@

@{
	//esto es codigo c#
	int valor = 14;
	string texto = "Hoy es lunes";
	valor += 1;
	texto += " y mañana martes.";
	texto = texto.ToUpper();
}

@* DIBUJAR VARIABLES
 *@
<h2 style="color: lightgoldenrodyellow">Texto: @texto, Número: @valor</h2>

@* CODIGO LOGICO
 *@

@if (valor > 0){
	//codigo c#
	texto = "POSITIVO";
	<h3 style="color:lightgreen">@texto</h3>
} else {
	texto = "NEGATIVO";
	<h3 style="color: lightcoral">@texto</h3>
}